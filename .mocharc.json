  "require": [
    "ts-node/register",
    "test/setup.ts"
  ],
  "node-option": [
    "experimental-specifier-resolution=node",
    "loader=ts-node/esm"
  ],
  "extension": ["ts", "tsx"],
  "spec": ["test/**/*.test.ts", "test/**/*.test.tsx"],
  "watch-files": ["test/**/*.ts", "test/**/*.tsx"],
  "timeout": 5000
}