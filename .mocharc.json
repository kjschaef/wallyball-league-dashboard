{
  "require": [
    "ts-node/register",
    "test/jsdom-setup.js",
    "test/setup.ts"
  ],
  "node-option": [
    "experimental-specifier-resolution=node",
    "loader=ts-node/esm"
  ],
  "extension": ["ts", "tsx", "js"],
  "spec": ["test/**/*.test.ts", "test/**/*.test.tsx", "test/**/*.test.js"],
  "watch-files": ["test/**/*.ts", "test/**/*.tsx", "test/**/*.js"],
  "timeout": 5000,
  "bail": false
}