{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./app/*",
        "./components/*",
        "./lib/*"
      ],
      "@db": [
        "./db"
      ],
      "@db/*": [
        "./db/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "client/**/*.ts",
    "client/**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    // "client", // Allow client directory to be included for ESLint type-aware linting
    ".next"
  ]
}
